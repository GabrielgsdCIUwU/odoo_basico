<odoo>
    <data>
        <record model="ir.actions.act_window" id="informacion_list_action">
            <field name="name">modulo odoo_basico, modelo información</field>
            <field name="res_model">odoo_basico.informacion</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Tienes que crear el primer registro</p>
            </field>
        </record>

        <record model="ir.ui.view" id="informacion_list_view">
            <field name="name">odoo_basico.list</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <list>
                    <field name="titulo"/>
                    <field name="descripcion"/>
                    <field name="alto_cm"/>
                    <field name="largo_cm"/>
                    <field name="ancho_cm"/>
                    <field name="peso"/>
                    <field name="autorizado"/>
                    <field name="sexo"/>
                </list>
            </field>
        </record>

        <record model="ir.ui.view" id="informacion_form_view">
            <field name="name">odoo_basico.form</field>
            <field name="model">odoo_basico.informacion</field>
            <field name="arch" type="xml">
                <form string="Formulario datos">
                    <sheet>
                        <group>
                            <field name="titulo"/>
                        </group>

                        <notebook>
                            <page string="Datos de Texto">
                                <group>
                                    <field name="descripcion"/>
                                    <field name="autorizado"/>
                                    <field name="sexo"/>
                                </group>

                            </page>

                            <page string="Datos Numéricos">
                                <group>
                                    <group>
                                        <field name="alto_cm"/>
                                        <field name="largo_cm"/>
                                        <field name="ancho_cm"/>
                                    </group>
                                    <group>
                                        <field name="peso"/>
                                        <field name="volumen"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

